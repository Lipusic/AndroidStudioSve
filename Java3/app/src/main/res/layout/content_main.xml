<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Ovo je TextView za tekst "kolicina" -->
    <TextView
        android:text="Kolicina"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!-- Ovo je dugme plus -->
    <Button
        android:onClick="increment"
        android:id="@+id/plus"
        android:text="+"
        android:layout_margin="8dp"
        android:layout_height="48dp"
        android:layout_width="48dp"
        />
    <!-- Ovo je dugme minus -->
    <Button
        android:onClick="decrement"
        android:id="@+id/minus"
        android:text="-"
        android:layout_margin="8dp"
        android:layout_height="48dp"
        android:layout_width="48dp"
        />
    <!-- Ovo je TextView koji ispisuje kolicinu -->
    <TextView
        android:id="@+id/quantity_text_view"
        android:text="0"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!-- Ovo je TextView za tekst "cijena" -->
    <TextView
        android:id="@+id/Cijena"
        android:text="Cijena"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!-- Ovo je TextView koji ispisuje cijenu -->
    <TextView
        android:id="@+id/quantity_price_view"
        android:text="0"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!-- Ovo je gumb naruci -->
    <Button
        android:onClick="submitOrder"
        android:id="@+id/Naruci"
        android:layout_margin="8dp"
        android:text="NARUCI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>